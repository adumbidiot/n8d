 {
	"name": "Boyce Block",
    "version": "1.0",
    "description": "Block Ads",
	"background": {
      "scripts": ["background.js"]
    },
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": ["main.js"]
		}
	],
	"web_accessible_resources": [
		"images/jacob128.png"
	],
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
        "16": "images/jacob16.png",
        "32": "images/jacob32.png",
        "48": "images/jacob48.png",
        "128": "images/jacob128.png"
      }
    },
	"icons": {
        "16": "images/jacob16.png",
        "32": "images/jacob32.png",
        "48": "images/jacob48.png",
        "128": "images/jacob128.png"
    },
    "manifest_version": 2
}